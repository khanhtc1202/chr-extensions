{
  "manifest_version": 2,
  "name": "niko-meet",
  "version": "1.0.0",
  "description": "niko chat for google meet",
  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["nico.js", "contentScript.js"]
    }
  ],
  "background": { "scripts": ["background.js"] }
}
